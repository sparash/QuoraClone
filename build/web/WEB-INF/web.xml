<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LServlet</servlet-name>
        <servlet-class>LServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignServlet</servlet-name>
        <servlet-class>SignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddQServlet</servlet-name>
        <servlet-class>AddQServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QShowServlet</servlet-name>
        <servlet-class>QShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnswerServlet</servlet-name>
        <servlet-class>AnswerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAnswer</servlet-name>
        <servlet-class>ShowAnswer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LServlet</servlet-name>
        <url-pattern>/LServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignServlet</servlet-name>
        <url-pattern>/SignServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddQServlet</servlet-name>
        <url-pattern>/AddQServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QShowServlet</servlet-name>
        <url-pattern>/QShowServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnswerServlet</servlet-name>
        <url-pattern>/AnswerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAnswer</servlet-name>
        <url-pattern>/ShowAnswer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
